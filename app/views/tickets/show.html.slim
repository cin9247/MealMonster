  li.street-address= "#{@ticket.customer.address.try(:street_name)} #{@ticket.customer.address.try(:street_number)}"
  li.locality= "#{@ticket.customer.address.try(:postal_code)} #{@ticket.customer.address.try(:town)}"
  li.email
    a href="#" email

