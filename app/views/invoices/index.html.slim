h1= "Rechnung für #{@customer.full_name}"

table
  thead
    tr
      th Datum
      th Angebot
      th Stückzahl
      th Preis
  tbody
    - @orders.each do |o|
      tr
        td= o.offering.date
        td= o.offering.name
        td 1
        td= o.offering.price
  tfooter
    tr
      td
      td
      td= @orders.size
      td= @orders.map(&:offering).map(&:price).sum(Money.new)
