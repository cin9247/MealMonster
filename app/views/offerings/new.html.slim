= link_to "Angebots√ºbersicht", offerings_path

= form_tag offerings_path(from: @dates.first.iso8601, to: @dates.last.iso8601)

  ul
    - @dates.each_with_index do |date, i|
      li
        h1=l date
        p
          = label_tag "name[#{i}]", "Name"
          = text_field_tag "name[#{i}]"
        p
          = label_tag "price_class_id[#{i}]", "Preisklasse"
          = select_tag "price_class_id[#{i}]", options_for_select(@price_classes.map { |p| [p.name_and_price, p.id] })
        p
          = label_tag "meal[#{i}][0]", "Vorspeise"
          = text_field_tag "meal[#{i}][0]"
        p
          = label_tag "meal[#{i}][1]", "Hauptgericht"
          = text_field_tag "meal[#{i}][1]"
        p
          = label_tag "meal[#{i}][2]", "Nachtisch"
          = text_field_tag "meal[#{i}][2]"
        = hidden_field_tag "date[#{i}]", date.iso8601

  = submit_tag "Angebote erstellen"
